<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BeaconView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:animateLayoutChanges="true"

    android:focusable="true">

    <TextView
        android:id="@+id/beacon_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <!--<TextView-->
        <!--android:id="@+id/beacon_item_RSSI_details"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignBottom="@+id/beacon_item_name"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_toEndOf="@+id/beacon_item_name"-->
        <!--android:text="TextView" />-->

    <TextView
        android:id="@+id/beacon_item_RSSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/beacon_item_name"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/beacon_item_name"
        android:text="TextView" />

    <!--<ImageView-->
        <!--android:id="@+id/marginPlaceHolder"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="10dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:layout_marginTop="40dp" />-->

    <LinearLayout
        android:id="@+id/expandArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/beacon_item_name"
        android:layout_alignParentEnd="true">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/beacon_item_roomId"
                style="@style/myText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/beacon_item_placeId"
                style="@style/myText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TextView
            android:id="@+id/beacon_item_description"
            style="@style/myText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <!--<Button-->
                <!--android:id="@+id/beacon_sonar"-->
                <!--style="@style/button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="40dp"-->
                <!--android:background="@drawable/button"-->
                <!--android:text="@string/sonar_button" />-->


        </TableRow>

        <TextView
            android:id="@+id/beacon_item_way_to_next"
            style="@style/myText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/beacon_beep"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:focusable="true"
            android:text="@string/beep_button" />
    </LinearLayout>


</RelativeLayout>